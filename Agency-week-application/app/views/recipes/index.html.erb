<hr>
<h4>Favorite Recipes:</h4>
<hr>
<div class="container">
<% @saved.each do |response| %>
<div class="card" id="saved-recipes">

  <div class="card-image waves-effect waves-block waves-light">

    <img class="activator" src= <%= response.imageURLsBySize %> >
  </div>

  <div class"card-content">
    <span class="card-title activator grey-text text-darken">Title: <i class="material-icons right">More Info</i><%= response.recipeName %></span>
  </div>

  <div class="card-action">
    <%= link_to "Link to Recipe", response.sourceRecipeUrl %><br>
  <hr>
  </div>

  <div class="card-reveal">
    <span class="card-title grey-text text-darken-4"><%= response.recipeName %><i class="material-icons right">close</i></span>

    <h3 class="card-text">
      Rating:
      <p> <%= response.rating %><br></p>
      Ingredients:
      <p> <%= response.ingredients %><br></p>
      <% puts "ingredients", response.ingredients%>
    </h3>
  </div>

</div><br>
<% end %>
</div>
