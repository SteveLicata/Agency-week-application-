
<h4>You Searched For: <%=  @ingredient %></h4>

<hr>

  <% @response["matches"].each_with_index do |response, i| %>
      <%=  puts i %>


  <div style="display:<%= i>=1 ? 'none' : 'block' %>" class="card">



    <div class="card-image waves-effect waves-block waves-light">
      <% @image = response["smallImageUrls"][0]%>
      <img class="activator" src=<%= @image %> >
    </div>

    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">Title: <i class="material-icons right">More Info</i><%= response["recipeName"] %></span>
      <p> <% @url_for_source = "http://www.yummly.com/recipe/#{response["id"]}"%>
          <%= link_to "Link to Recipe", "http://www.yummly.com/recipe/#{response["id"]}", :target => "_blank" %></p>
    </div>
    <div class="card-action">

      <p id="savebttn">
        <%= link_to "Save Recipe", {action: :create, ingredient_of_the_day: @ingredient, user_id: current_user.id, imageURLsBySize: @image, recipeName: response["recipeName"], ingredients:  response["ingredients"].join(","), rating: response["rating"], sourceRecipeUrl:  @url_for_source}, method: :post, remote: true, class: "savebbttn" %>
      </p>
            <a class="deletebttn" href="">Delete</a>

    </div>

    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"><%= response["recipeName"] %><i class="material-icons right">close</i></span>

      <h3 class="card-text">
        <strong>Rating: </strong><%= response["rating"] %>

        <br>

        <% @time = response["totalTimeInSeconds"]/60%>

        <strong>Cooking Time: </strong><%=  @time %> min

        <br>

        <strong>Ingredients: </strong>
        <% response["ingredients"].each do |ing|%><br>
        </li><%= ing %></li>
        <%end%>

      </h3>

    </div>




</div> <br>
<%end%>
