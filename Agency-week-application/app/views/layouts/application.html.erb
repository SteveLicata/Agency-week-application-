<!DOCTYPE html>
<html>
  <head>
    <title>AgencyWeekApplication</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div id="mySidenav" class="sidenav">
      <a id="closingx" href="javascript:void(0)" class="closebtn">&times;</a>
      	<% if  (user_signed_in?) %>
          <%= link_to "Home", home_page_path %>
          <%= link_to "Profile", user_path(current_user.id) %>
          <%= link_to "Recipe Search", recipe_search_path %>
      	  <%= link_to "Sign out", { :action => "destroy", :controller=> "devise/sessions"}, method: :delete %>
        <% else %>
        	<%= link_to "Sign In", new_user_session_path %>
        	<%= link_to "Sign Up", new_user_registration_path %>
      	<% end %>
    </div>

    <div id="main">
      <h2>RecipeBook</h2>
      <p>Welcome to RecipeBook! Click below to open the side navigation menu.</p>
      <span id= "hamburger" style="font-size:30px;cursor:pointer" >&#9776; open</span>
    </div>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>
